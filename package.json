{
  "name": "adk-&-chainlit-agent-builder",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:backend": "tsx watch server/index.ts",
    "dev:all": "concurrently -n \"frontend,backend\" -c \"blue,green\" \"npm run dev\" \"npm run dev:backend\"",
    "build": "vite build",
    "build:backend": "tsc --project tsconfig.server.json",
    "preview": "vite preview",
    "start": "node dist/server/index.js",
    "chainlit:dev": "CHAINLIT_PORT=8000 chainlit run chainlit_app/main.py --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "type-check": "tsc --noEmit",
    "security:audit": "bash scripts/security-audit.sh",
    "security:npm": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jszip": "^3.10.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.6.2",
    "tsx": "^4.20.6",
    "typescript": "~5.9.3",
    "vite": "^6.2.0",
    "vitest": "^2.1.4"
  },
  "optionalDependencies": {
    "@esbuild/darwin-arm64": "^0.25.11",
    "@esbuild/linux-x64": "^0.25.11",
    "@esbuild/win32-x64": "^0.25.11",
    "@rollup/rollup-darwin-arm64": "^4.52.5",
    "@rollup/rollup-linux-x64-gnu": "^4.52.5",
    "@rollup/rollup-win32-x64-msvc": "^4.52.5"
  }
}
